{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run zig file",
        "type": "shell",
        "command": "zig.exe run -O ReleaseSafe ${relativeFile}",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "problemMatcher": []
      },
      {
        "label": "Test zig file",
        "type": "shell",
        "command": "zig.exe test ${relativeFile}",
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Build zig file",
        "type": "shell",
        "command": "zig.exe build-exe ${relativeFile}",
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      }
    ]
  }